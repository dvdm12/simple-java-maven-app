pipeline {
    agent {
        docker {
            image 'maven:3.9.11-eclipse-temurin-17'
            args '-v /root/.m2:/root/.m2 -v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        SONAR_PROJECT_KEY = 'taller-SO'
        SONAR_PROJECT_NAME = 'taller-SO'
    }

    stages {
        stage('Run Tests') {
            steps {
                echo "Running JUnit tests..."
                sh 'mvn -B clean verify'
                echo "JUnit tests executed successfully."
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }

        stage('Vulnerability Analysis') {
            steps {
                echo "Running OWASP Dependency Check..."
                sh 'mvn org.owasp:dependency-check-maven:check'
                echo "Vulnerability analysis completed."
            }
            post {
                always {
                    publishHTML(target: [
                        reportDir: 'target',
                        reportFiles: 'dependency-check-report.html',
                        reportName: 'OWASP Dependency Check Report'
                    ])
                }
            }
        }

        stage('SonarQube Analysis') {
            steps {
                echo "Starting SonarQube analysis..."
                withCredentials([string(credentialsId: 'sonar-token', variable: 'SONAR_AUTH_TOKEN')]) {
                    withSonarQubeEnv('SonarQubeServer') {
                        sh '''
                            mvn -B sonar:sonar \
                                -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                                -Dsonar.projectName="${SONAR_PROJECT_NAME}" \
                                -Dsonar.host.url=${SONAR_HOST_URL} \
                                -Dsonar.token=${SONAR_AUTH_TOKEN}
                        '''
                        echo "SonarQube analysis completed."
                    }
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    echo "Building Docker image..."
                    sh 'cp target/*.jar dockerfile/'
                    sh 'docker build -f dockerfile/Dockerfile -t my-app-image .'
                    echo "Docker image built successfully."
                }
            }
        }

        stage('Deliver') {
            steps {
                echo "Running delivery script..."
                sh './jenkins/scripts/deliver.sh'
                echo "Delivery completed."
            }
        }
    }

    post {
        always {
            echo "Pipeline finished."
        }
        failure {
            echo "Pipeline failed. Please review the logs."
        }
    }
}
